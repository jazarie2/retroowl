{
  "manifest_version": 3,
  "name": "Retro SD Manager",
  "version": "0.1.0",
  "description": "Manage SD cards for retro gaming devices",
  "permissions": [
    "storage",
    "fileSystem",
    "fileSystem.directory",
    "fileSystem.write"
  ],
  "host_permissions": [
    "file://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["file://*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 